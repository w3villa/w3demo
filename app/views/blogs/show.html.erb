<p id="notice"><%= notice %></p>
<div class="showblog">
  <h2>
    <%= @blog.title %>
  </h2>
    <hr>
      <%= image_tag(@blog.image , style: "height:100%; width:100%;") if @blog.image.present?  %>
      <h5> <strong>Category: </strong>
        <%= @blog.category.try(:name) %>
      </h5>
      <h5> <strong>Tag: </strong>
        <%= @blog.tag_list%>
      </h5>
        <p><%= @blog.body %></p>
          <% if user_signed_in? && current_user == @blog.user %>
            <span><%= link_to 'Edit', edit_blog_path(@blog) %></span>
            <span><%= link_to 'Destroy', @blog, method: :delete, data:{ confirm: 'Are you sure?' } %></span>
         <% end %>
         <div class="container overflow-hidden">
  <div class="row md-5">
    <div class="col">
     <div class="p-3 border bg-light"> <h3>Comments</h3></div>
      <%= form_for [@blog, Comment.new] do |f| %>
    <%= f.text_area :body, placeholder: "Add a comment" %><br/>
    <%= f.submit "Add Comment" %>
  <% end %>

    </div>
    
  </div>
</div>

 </div>

