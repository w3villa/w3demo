<div class="card categories ">
<div class="card-header">Tags</div>
<div class="card-body">
   <ul class="list-group">
    <% tags.each do |tag| %>
        <li class="list-group-item d-flex justify-content-between align-items-center m-2">
        <%= link_to tag.name, blogs_tags_path(:id => tag.id) %> 
         <span class="badge bg-primary text-white badge-pill"><%= tag.blogs.count %></span>
        </li>
        <br>
    <% end %>
   </ul>     
</div>
</div
