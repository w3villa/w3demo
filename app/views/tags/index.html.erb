<p id="notice"><%= notice %></p>
<h2> All tags</h2>
<br>
<div class="container">
  <div class="row">
    <% @tags.each do |tag| %>
      <div class="col-md-4">
        <div class="card"> 
          <div class="card-body">
            <h3><%= tag.name %></h3>
            <br>
              <%= link_to 'Show', tag ,class: "btn btn-outline-primary" %>
              <%= link_to 'Edit', edit_tag_path(tag) ,class: "btn btn-outline-secondary"  %>
              <%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger"  %>          
          </div>        
        </div><hr>
      </div>
    <% end %>  
  </div>  
</div>
<br>
<%= link_to 'New Tag', new_tag_path , class: "link"%>
<br>