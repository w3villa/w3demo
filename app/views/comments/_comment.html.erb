<li>
    <%= comment.body %> -
    <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago</small>
    <span id = "nested-comment">
    <%= form_for [comment, Comment.new] do |f| %>
       
        <%= f.text_field :body, placeholder: "Add a Reply", class:"form-control " %><br/>
        <%= f.submit "comment", class: "btn reply-btn btn-info"  %></br>
        <% end %>
       
    
    <ul>
       <br>
       <%= render comment.comments %>
    </ul>
    </span>
  </li>
