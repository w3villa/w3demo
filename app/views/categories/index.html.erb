<p id="notice"><%= notice %></p>
<h2> All Categories</h2>
<br>
<div class="container">
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h3><%= category.name %></h3>
            <br>
             <%= link_to 'Show', category ,class: "btn btn-outline-primary" %>
             <%= link_to 'Edit', edit_category_path(category),class: "btn btn-outline-secondary"   %>
             <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger"  %>          
          </div>        
        </div><hr>
      </div>
    <% end %>  
  </div>  
</div>
<br>
<%= link_to 'New Category', new_category_path , class: "btn btn-primary" %>
