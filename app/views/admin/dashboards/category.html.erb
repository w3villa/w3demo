<%= render 'sidebar' %>
<div id="layoutSidenav_content">
 	<main>
      <div class="container-fluid px-4">
          <h1 class="mt-4">Tables</h1>
          <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
              <li class="breadcrumb-item active">Category</li>
          </ol> 
          <div class="card mb-4">
              <div class="card-header">
                  <i class="fas fa-table me-1"></i>
                  All Categories
              </div>
              <div class="card-body">
              	<table class="table table-hover table-bordered">
						  <thead>
						    <tr>
						      <th>Sr.No</th>
						      <th>Body</th>
						   
						    </tr>
						  </thead>
						  <tbody>
						    <% @categories.each do |category| %>
						      <tr>
						        <td><%= category.id %></td>
   					        <td><%= category.name%></td>
						        <td><%= link_to 'Show', category ,class: "btn btn-outline-primary" %>
                    </td>
						        <td><%= link_to 'Edit', edit_category_path(category),class: "btn btn-outline-secondary"   %></td>
						        <td> <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger"  %>  </td>
						      </tr>
						    <% end %>
						  </tbody>
						</table>     
              </div>
          </div>
      </div>
  </main>
</div>
