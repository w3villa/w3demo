<%= render 'sidebar' %>
<div id="layoutSidenav_content">
 	<main>
      <div class="container-fluid px-4">
          <h1 class="mt-4">Tables</h1>
          <ol class="breadcrumb mb-4">
              <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
              <li class="breadcrumb-item active">Tables</li>
          </ol>
         
          <div class="card mb-4">
              <div class="card-header">
                  <i class="fas fa-table me-1"></i>
                  All Blogs
              </div>
              <div class="card-body">
              	<table class="table table-hover table-bordered">
								  <thead>
								    <tr>
								    	<th>Sr.No</th>
								      <th>Title</th>
								      <th>Body</th>
								      <th>Tag</th>
								      <th colspan="3"></th>
								    </tr>
								  </thead>
								  <tbody>
								    <% @blogs.each do |blog| %>
								      <tr>
								      	<td><%= blog.id %></td>
								        <td><%= blog.title %></td>
								        <td><%= truncate(strip_tags(blog.rich_text_body.to_s), length: 50) %></td>
								        <td><%= blog.tag_list%></td>
								        <td>
								        	<%= link_to 'Show', blog ,class: "btn btn-outline-info" %></td>
								        <td><%= link_to 'Edit', edit_blog_path(blog),class: "btn btn-outline-secondary" %></td>
								        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-outline-danger"%></td>
								      </tr>
								    <% end %>
								  </tbody>
								</table>     
              </div>
          </div>
      </div>
  </main>
</div>
