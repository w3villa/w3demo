<div id="div-5">
<main class="app-content">
<h2> All users</h2>
<br>
<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4">
        <div class="card"> 
          <div class="card-body">
            <h3><%= user.name %></h3>
            <br>
              <%= link_to 'Show', admin_user_path(user) ,class: "btn btn-outline-primary" %>
              <%= link_to 'Edit', edit_admin_user_path(user) ,class: "btn btn-outline-secondary"  %>
              <%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger"  %>          
          </div>        
        </div><hr>
      </div>
    <% end %>  
  </div>  
</div>
</main>
</div>

<script type="text/javascript">
    
   const div1 =  document.getElementById('div-1').style
   const div2 =  document.getElementById('div-2').style
   const div3 =  document.getElementById('div-3').style
   const div4 =  document.getElementById('div-4').style
   const div5 =  document.getElementById('div-5').style


   div1.display="block"
   div2.display="none"
   div3.display="none"
   div4.display="none"
   div5.display="none"
  
    function show1(){
       div1.display="block"
       div2.display="none"
       div3.display="none"
       div4.display="none"
       div5.display="none"
    }
    
    function show2(){
      div1.display="none"
      div2.display="block"
      div3.display="none"
      div4.display="none"
      div5.display="none"
   }
   
   function show3(){
      div1.display="none"
      div2.display="none"
      div3.display="block"
      div4.display="none"
      div5.display="none"
 }

   function show4(){
       div1.display="none"
       div2.display="none"
       div3.display="none"
       div4.display="block"
       div5.display="none"
    }
    function show5(){
       div1.display="none"
       div2.display="none"
       div3.display="none"
       div4.display="none"
       div5.display="block"
    }
</script>

